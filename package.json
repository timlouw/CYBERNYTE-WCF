{
  "type": "module",
  "scripts": {
    "start": "bun framework/compiler/build.ts dev client serve",
    "start-prod": "bun framework/compiler/build.ts prod client serve",
    "start-prod-gzipped": "bun framework/compiler/build.ts prod client serve gzip",
    "build": "bun framework/compiler/build.ts dev client",
    "build-prod": "bun framework/compiler/build.ts prod client",
    "build-prod-gzipped": "bun framework/compiler/build.ts prod client gzip",
