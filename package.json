{
  "type": "module",
  "scripts": {
    "start-prod": "node --loader ts-node/esm scripts/build.ts prod client serve",
    "build": "node --loader ts-node/esm scripts/build.ts prod client",
    "start-admin": "ts-node scripts/build.ts dev admin serve",
    "start-admin-prod": "ts-node scripts/build.ts prod admin serve",
    "build-admin": "ts-node scripts/build.ts prod admin",
    "speed-test": "lighthouse http://localhost:4200 --output json --output-path ./report.json --quiet --chrome-flags=\"--headless\" --only-categories=performance",
    "format": "prettier --write \"**/*.{ts,json,html}\"",
    "format:check": "prettier --check \"**/*.{ts,json,html}\"",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@types/finalhandler": "^1.2.3",
    "@types/node": "^22.7.5",
    "@types/serve-static": "^1.15.7",
    "esbuild": "^0.19.4",
    "finalhandler": "^1.2.0",
    "husky": "^8.0.3",
    "murmurhash": "^2.0.1",
    "prettier": "3.0.3",
    "serve-static": "^1.15.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3"
  }
}
